{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "description": "Map showing routes between cities with ribbons proportional to log(sum(passenger_trips)) and filterable by date range.",
    "vconcat": [
        {
            "width": 800,
            "height": 500,
            "projection": {
                "type": "equirectangular"
            },
            "layer": [
                {
                    "data": {
                        "url": "https://raw.githubusercontent.com/Stonkies/FIT3179_A2/refs/heads/main/australian_states.json",
                        "format": {
                            "type": "topojson",
                            "feature": "STE_2016_AUST"
                        }
                    },
                    "mark": {
                        "type": "geoshape",
                        "fill": "lightgray",
                        "opacity": 0.6,
                        "stroke": "black"
                    }
                },
                {
                    "data": {
                        "url": "https://raw.githubusercontent.com/Stonkies/FIT3179_A2/refs/heads/main/route_data_clean.csv",
                        "format": {
                            "type": "csv"
                        }
                    },
                    "transform": [
                        {
                            "calculate": "datetime(datum.Year, datum.Month_num - 1, 1)", 
                            "as": "Date"
                        },
                        {
                            "filter": {
                                "selection": "brush"
                            }
                        },
                        {
                            "groupby": [
                                "City1",
                                "City2",
                                "City1_Long",
                                "City1_Lat",
                                "City2_Long",
                                "City2_Lat"
                            ],
                            "aggregate": [
                                {
                                    "op": "sum",
                                    "field": "Passenger_Trips",
                                    "as": "sum_passenger_trips"
                                }
                            ]
                        },
                        {
                            "calculate": "log(datum.sum_passenger_trips)",
                            "as": "log_sum_passenger_trips"
                        }
                    ],
                    "mark": {
                        "type": "rule",
                        "opacity": 0.7
                    },
                    "encoding": {
                        "longitude": {
                            "field": "City1_Long",
                            "type": "quantitative"
                        },
                        "latitude": {
                            "field": "City1_Lat",
                            "type": "quantitative"
                        },
                        "longitude2": {
                            "field": "City2_Long",
                            "type": "quantitative"
                        },
                        "latitude2": {
                            "field": "City2_Lat",
                            "type": "quantitative"
                        },
                        "size": {
                            "field": "log_sum_passenger_trips",
                            "type": "quantitative",
                            "title": "Passenger Trips (log of sum)",
                            "legend": null
                        },
                        "color": {
                            "field": "sum_passenger_trips",
                            "type": "quantitative",
                            "title": "Total Passenger Trips"
                        },
                        "tooltip": [
                            {
                                "field": "City1",
                                "type": "nominal",
                                "title": "City 1"
                            },
                            {
                                "field": "City2",
                                "type": "nominal",
                                "title": "City 2"
                            },
                            {
                                "field": "sum_passenger_trips",
                                "type": "quantitative",
                                "title": "Total Passenger Trips",
                                "format": ","
                            }
                        ]
                    }
                },
                {
                    "data": {
                        "url": "https://raw.githubusercontent.com/Stonkies/FIT3179_A2/refs/heads/main/route_data_clean.csv",
                        "format": {
                            "type": "csv"
                        }
                    },
                    "transform": [
                        {
                            "groupby": [
                                "City1",
                                "City2",
                                "City1_Long",
                                "City1_Lat",
                                "City2_Long",
                                "City2_Lat"
                            ],
                            "aggregate": [
                                {
                                    "op": "sum",
                                    "field": "Passenger_Trips",
                                    "as": "sum_passenger_trips"
                                }
                            ]
                        },
                        {
                            "window": [
                                {
                                    "op": "rank",
                                    "as": "rank"
                                }
                            ],
                            "sort": [
                                {
                                    "field": "sum_passenger_trips",
                                    "order": "descending"
                                }
                            ]
                        },
                        {
                            "filter": "datum.rank == 1"
                        },
                        {
                            "calculate": "parseFloat(datum.City1_Long)",
                            "as": "City1_Long_numeric"
                        },
                        {
                            "calculate": "parseFloat(datum.City2_Long)",
                            "as": "City2_Long_numeric"
                        },
                        {
                            "calculate": "parseFloat(datum.City1_Lat)",
                            "as": "City1_Lat_numeric"
                        },
                        {
                            "calculate": "parseFloat(datum.City2_Lat)",
                            "as": "City2_Lat_numeric"
                        },
                        {
                            "calculate": "(datum.City1_Long_numeric + datum.City2_Long_numeric) / 2",
                            "as": "midpoint_long"
                        },
                        {
                            "calculate": "(datum.City1_Lat_numeric + datum.City2_Lat_numeric) / 2",
                            "as": "midpoint_lat"
                        },
                        {
                            "calculate": "'Busiest Route: ' + datum.City1 + ' to / from ' + datum.City2",
                            "as": "busiest_route_label"
                        }
                    ],
                    "mark": {
                        "type": "text",
                        "fontSize": 11,
                        "font": "Arial",
                        "align": "left",
                        "dy": 10,
                        "dx": 10,
                        "fontWeight": "bold",
                        "color": "red"
                    },
                    "encoding": {
                        "longitude": {
                            "field": "midpoint_long",
                            "type": "quantitative"
                        },
                        "latitude": {
                            "field": "midpoint_lat",
                            "type": "quantitative"
                        },
                        "text": {
                            "field": "busiest_route_label",
                            "type": "nominal"
                        },
                        "color": {
                            "value": "red"
                        }
                    }
                },
                {
                    "data": {
                        "url": "https://raw.githubusercontent.com/Stonkies/FIT3179_A2/refs/heads/main/region_centroid_labels.csv",
                        "format": {
                            "type": "csv"
                        }
                    },
                    "transform": [
                        {
                            "filter": "datum.Region_Type === 'State'"
                        }
                    ],
                    "mark": {
                        "type": "text",
                        "fontSize": 10,
                        "dx": -40,
                        "dy": 0,
                        "align": "left"
                    },
                    "encoding": {
                        "longitude": {
                            "field": "Longitude",
                            "type": "quantitative"
                        },
                        "latitude": {
                            "field": "Latitude",
                            "type": "quantitative"
                        },
                        "text": {
                            "field": "Region",
                            "type": "nominal"
                        }
                    }
                }
            ]
        },
        {
            "width": 1000,
            "height": 100,
            "data": {
                "url": "https://raw.githubusercontent.com/Stonkies/FIT3179_A2/refs/heads/main/route_data_clean.csv",
                "format": {
                    "type": "csv"
                }
            },
            "transform": [
                {
                    "calculate": "datetime(datum.Year, datum.Month_num - 1, 1)", 
                    "as": "Date"
                }
            ],
            "mark": "line",
            "encoding": {
                "x": {
                    "field": "Date",
                    "type": "temporal",
                    "axis": {
                        "title": "Date"
                    }
                },
                "y": {
                    "aggregate": "count",
                    "type": "quantitative"
                },
                "opacity": {
                    "condition": {
                        "selection": "brush",
                        "value": 1
                    },
                    "value": 0.7
                }
            },
            "selection": {
                "brush": {
                    "type": "interval",
                    "encodings": [
                        "x"
                    ]
                }
            }
        }
    ],
    "view": {
        "stroke": "transparent"
    }
}
